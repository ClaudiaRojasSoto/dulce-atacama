<%- if controller_name != 'sessions' %>
  <%= link_to "Iniciar sesión", new_user_session_path, class: "text-pink-600 hover:text-pink-700 font-medium" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Registrarse", new_user_registration_path, class: "text-purple-600 hover:text-purple-700 font-medium" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "¿Olvidaste tu contraseña?", new_user_password_path, class: "text-gray-600 hover:text-gray-700" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "¿No recibiste las instrucciones de confirmación?", new_user_confirmation_path, class: "text-blue-600 hover:text-blue-700" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "¿No recibiste las instrucciones de desbloqueo?", new_user_unlock_path, class: "text-gray-600 hover:text-gray-700" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
  <% end %>
<% end %>
