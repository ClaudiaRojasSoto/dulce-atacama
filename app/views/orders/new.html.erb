<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <%= link_to "← Volver a productos", products_path, class: "text-pink-600 hover:text-pink-700 font-medium" %>
  </div>

  <h1 class="text-3xl font-bold text-gray-800 mb-8">Nuevo Pedido</h1>

  <div class="bg-gradient-to-r from-yellow-50 to-orange-50 border-l-4 border-orange-400 p-4 rounded-r-lg mb-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-orange-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm text-orange-700">
          <strong>Importante:</strong> Los pedidos deben hacerse con al menos 24 horas de anticipación. 
          Te contactaremos por WhatsApp para confirmar tu pedido.
        </p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-lg p-8">
    <%= form_with(model: @order, class: "space-y-6", data: { controller: "order-form" }) do |form| %>
      <% if @order.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-r-lg">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Hay errores que impiden crear el pedido:</h3>
              <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                <% @order.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="bg-gradient-to-r from-pink-50 to-purple-50 rounded-xl p-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">Productos</h2>
        
        <div id="order-items">
          <%= form.fields_for :order_items do |item_form| %>
            <div class="flex gap-4 mb-4 items-end">
              <div class="flex-1">
                <%= item_form.label :product_id, "Producto", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= item_form.select :product_id, 
                    @products.map { |p| ["#{p.name} - $#{number_with_delimiter(p.price)}", p.id] }, 
                    { prompt: "Selecciona un producto" }, 
                    class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
              </div>
              
              <div class="w-32">
                <%= item_form.label :quantity, "Cantidad", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= item_form.number_field :quantity, min: 1, value: 1, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div>
        <%= form.label :phone, "Teléfono de contacto", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :phone, placeholder: "+56 9 XXXX XXXX", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div>
        <%= form.label :delivery_address, "Dirección de entrega", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :delivery_address, rows: 3, placeholder: "Calle, número, depto, referencias...", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div>
        <%= form.label :delivery_date, "Fecha y hora de entrega", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.datetime_local_field :delivery_date, min: 1.day.from_now, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
        <p class="mt-1 text-sm text-gray-500">Debe ser con al menos 24 horas de anticipación</p>
      </div>

      <div>
        <%= form.label :notes, "Notas adicionales (opcional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :notes, rows: 3, placeholder: "Instrucciones especiales, dedicatoria, etc.", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div class="flex justify-end space-x-4 pt-4 border-t">
        <%= link_to "Cancelar", products_path, class: "px-6 py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition font-medium" %>
        <%= form.submit "Crear Pedido", class: "px-8 py-3 bg-gradient-to-r from-pink-500 to-purple-600 text-white rounded-lg hover:from-pink-600 hover:to-purple-700 transition font-semibold shadow-md" %>
      </div>
    <% end %>
  </div>
</div>
