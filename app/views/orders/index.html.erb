<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-8">Mis Pedidos</h1>

  <% if @orders.any? %>
    <div class="space-y-6">
      <% @orders.each do |order| %>
        <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition">
          <div class="p-6">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
              <div>
                <h2 class="text-2xl font-bold text-gray-800 mb-2">Pedido #<%= order.id %></h2>
                <p class="text-gray-600">Creado el <%= order.created_at.strftime('%d/%m/%Y %H:%M') %></p>
              </div>
              
              <div class="mt-4 md:mt-0 flex flex-col items-start md:items-end space-y-2">
                <span class="px-4 py-2 rounded-lg font-semibold text-sm
                  <%= case order.status
                      when 'pending' then 'bg-yellow-100 text-yellow-800'
                      when 'confirmed' then 'bg-blue-100 text-blue-800'
                      when 'preparing' then 'bg-purple-100 text-purple-800'
                      when 'ready' then 'bg-green-100 text-green-800'
                      when 'delivered' then 'bg-gray-100 text-gray-800'
                      when 'cancelled' then 'bg-red-100 text-red-800'
                      end %>">
                  <%= order.status.titleize %>
                </span>
                <span class="text-2xl font-bold text-pink-600">$<%= number_with_delimiter(order.total) %></span>
              </div>
            </div>

            <div class="border-t border-gray-200 pt-4">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                  <span class="text-sm text-gray-600">Fecha de Entrega:</span>
                  <p class="font-medium text-gray-800"><%= order.delivery_date.strftime('%d/%m/%Y %H:%M') %></p>
                </div>
                <div>
                  <span class="text-sm text-gray-600">DirecciÃ³n:</span>
                  <p class="font-medium text-gray-800"><%= order.delivery_address %></p>
                </div>
              </div>

              <div class="mb-4">
                <span class="text-sm text-gray-600">Productos:</span>
                <div class="mt-2 space-y-2">
                  <% order.order_items.each do |item| %>
                    <div class="flex items-center space-x-3">
                      <span class="text-pink-600 font-semibold"><%= item.quantity %>Ã—</span>
                      <span class="text-gray-800"><%= item.product.name %></span>
                    </div>
                  <% end %>
                </div>
              </div>

              <div class="flex justify-end">
                <%= link_to "Ver Detalles", order_path(order), class: "bg-gradient-to-r from-pink-500 to-purple-600 text-white px-6 py-2 rounded-lg hover:from-pink-600 hover:to-purple-700 transition font-medium" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-xl shadow-lg p-12 text-center">
      <span class="text-6xl mb-4 block">ðŸ“¦</span>
      <h3 class="text-2xl font-bold text-gray-700 mb-2">No tienes pedidos aÃºn</h3>
      <p class="text-gray-500 mb-6">Â¡Explora nuestros productos y haz tu primer pedido!</p>
      <%= link_to "Ver Productos", products_path, class: "inline-block bg-gradient-to-r from-pink-500 to-purple-600 text-white px-8 py-3 rounded-lg hover:from-pink-600 hover:to-purple-700 transition font-semibold shadow-md" %>
    </div>
  <% end %>
</div>
