<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-gray-800 mb-4">Nuestros Productos</h1>
    <p class="text-gray-600">Descubre nuestra deliciosa selecci√≥n de productos artesanales</p>
  </div>

  <div class="flex flex-col md:flex-row gap-8">
    <aside class="md:w-64 flex-shrink-0">
      <div class="bg-white rounded-lg shadow-md p-6 sticky top-20">
        <h2 class="text-xl font-bold mb-4 text-gray-800">Categor√≠as</h2>
        <ul class="space-y-2">
          <li>
            <%= link_to "Todas", products_path, class: "block px-4 py-2 rounded-lg #{params[:category_id].blank? ? 'bg-gradient-to-r from-pink-500 to-purple-600 text-white' : 'text-gray-700 hover:bg-gray-100'} transition" %>
          </li>
          <% @categories.each do |category| %>
            <li>
              <%= link_to category.name, products_path(category_id: category.id), class: "block px-4 py-2 rounded-lg #{params[:category_id] == category.id.to_s ? 'bg-gradient-to-r from-pink-500 to-purple-600 text-white' : 'text-gray-700 hover:bg-gray-100'} transition" %>
            </li>
          <% end %>
        </ul>
      </div>
    </aside>

    <div class="flex-1">
      <% if @products.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @products.each do |product| %>
            <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition transform hover:-translate-y-2">
              <% if product.images.attached? %>
                <%= image_tag product.images.first, class: "w-full h-56 object-cover" %>
              <% else %>
                <div class="w-full h-56 bg-gradient-to-br from-pink-200 to-purple-200 flex items-center justify-center">
                  <span class="text-5xl">üç∞</span>
                </div>
              <% end %>
              
              <div class="p-5">
                <div class="mb-2">
                  <span class="inline-block bg-purple-100 text-purple-800 text-xs px-2 py-1 rounded-full font-medium">
                    <%= product.category.name %>
                  </span>
                </div>
                
                <h3 class="text-lg font-bold text-gray-800 mb-2"><%= product.name %></h3>
                <p class="text-sm text-gray-600 mb-4 line-clamp-2"><%= product.description %></p>
                
                <div class="flex items-center justify-between">
                  <span class="text-2xl font-bold text-pink-600">$<%= number_with_delimiter(product.price) %></span>
                  <%= link_to "Ver m√°s", product_path(product), class: "bg-gradient-to-r from-pink-500 to-purple-600 text-white px-4 py-2 rounded-lg hover:from-pink-600 hover:to-purple-700 transition font-medium text-sm" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <span class="text-6xl mb-4 block">üîç</span>
          <h3 class="text-2xl font-bold text-gray-700 mb-2">No hay productos disponibles</h3>
          <p class="text-gray-500">Intenta con otra categor√≠a</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
