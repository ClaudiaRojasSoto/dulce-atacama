<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "← Volver a Usuarios", admin_users_path, class: "text-pink-600 hover:text-pink-700 font-medium" %>
  </div>

  <div class="max-w-2xl mx-auto bg-white shadow-lg rounded-lg p-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Editar Usuario</h1>

    <%= form_with(model: [:admin, @user], local: true, class: "space-y-6") do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@user.errors.count, "error") %> impidieron guardar:
              </h3>
              <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= f.label :full_name, "Nombre completo", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :full_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :phone, "Teléfono", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :phone, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent" %>
      </div>

      <div class="border-t border-gray-200 pt-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Estado de Verificación</h3>
        
        <div class="space-y-4">
          <div class="bg-blue-50 p-4 rounded-lg">
            <p class="text-sm text-gray-700 mb-2"><strong>Email:</strong></p>
            <% if @user.confirmed? %>
              <p class="text-sm text-green-700">✓ Confirmado el <%= @user.confirmed_at.strftime('%d/%m/%Y a las %H:%M') %></p>
            <% else %>
              <p class="text-sm text-red-700">✗ Pendiente de confirmación</p>
              <p class="text-xs text-gray-600 mt-1">El usuario debe confirmar desde el email que le enviamos.</p>
              <p class="text-xs text-gray-600">Si no lo recibió, puede usar "Confirmar Email" en la lista de usuarios.</p>
            <% end %>
          </div>

          <div class="flex items-center">
            <%= f.check_box :phone_verified, class: "h-4 w-4 text-pink-600 focus:ring-pink-500 border-gray-300 rounded" %>
            <%= f.label :phone_verified, "Teléfono verificado (manual)", class: "ml-2 block text-sm text-gray-900" %>
          </div>
        </div>
      </div>

      <div class="flex gap-4 pt-6">
        <%= f.submit "Guardar cambios", class: "flex-1 bg-gradient-to-r from-pink-500 to-purple-600 text-white px-6 py-3 rounded-lg hover:from-pink-600 hover:to-purple-700 transition font-semibold shadow-lg cursor-pointer" %>
        <%= link_to "Cancelar", admin_users_path, class: "flex-1 bg-gray-200 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-300 transition font-semibold text-center" %>
      </div>
    <% end %>
  </div>
</div>

