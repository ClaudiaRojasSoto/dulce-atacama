<div class="bg-white rounded-xl shadow-lg p-8">
  <%= form_with(model: [:admin, product], class: "space-y-6") do |form| %>
    <% if product.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-r-lg">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              Hay <%= pluralize(product.errors.count, "error") %> que impiden guardar:
            </h3>
            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
              <% product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div>
      <%= form.label :name, "Nombre", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
    </div>

    <div>
      <%= form.label :description, "Descripción", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :description, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :price, "Precio", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.number_field :price, step: 0.01, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div>
        <%= form.label :category_id, "Categoría", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :category_id, @categories.map { |c| [c.name, c.id] }, { prompt: "Selecciona una categoría" }, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>
    </div>

    <div>
      <%= form.label :active, class: "flex items-center cursor-pointer" do %>
        <%= form.check_box :active, class: "form-checkbox h-5 w-5 text-purple-600 rounded focus:ring-2 focus:ring-purple-500" %>
        <span class="ml-2 text-sm font-medium text-gray-700">Producto activo</span>
      <% end %>
    </div>

    <div>
      <%= form.label :images, "Imágenes", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.file_field :images, multiple: true, accept: "image/*", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      <p class="mt-1 text-sm text-gray-500">Puedes seleccionar múltiples imágenes</p>
      
      <% if product.images.attached? %>
        <div class="grid grid-cols-4 gap-4 mt-4">
          <% product.images.each do |image| %>
            <div class="relative">
              <%= image_tag image, class: "w-full h-24 object-cover rounded-lg" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="flex justify-end space-x-4 pt-4">
      <%= link_to "Cancelar", admin_products_path, class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition font-medium" %>
      <%= form.submit product.new_record? ? "Crear Producto" : "Actualizar Producto", class: "px-6 py-2 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-lg hover:from-purple-700 hover:to-pink-700 transition font-semibold shadow-md" %>
    </div>
  <% end %>
</div>

