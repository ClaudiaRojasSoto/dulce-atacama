<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-8">Gesti√≥n de Pedidos</h1>

  <div class="mb-6 flex flex-wrap gap-2">
    <%= link_to "Todos", admin_orders_path, class: "px-4 py-2 rounded-lg #{params[:status].blank? ? 'bg-purple-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-50'} transition font-medium" %>
    <% Order.statuses.keys.each do |status| %>
      <%= link_to status.titleize, admin_orders_path(status: status), class: "px-4 py-2 rounded-lg #{params[:status] == status ? 'bg-purple-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-50'} transition font-medium" %>
    <% end %>
  </div>

  <% if @orders.any? %>
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tel√©fono</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Entrega</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @orders.each do |order| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#<%= order.id %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= order.user.email %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= order.phone %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-semibold">$<%= number_with_delimiter(order.total) %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full 
                  <%= case order.status
                      when 'pending' then 'bg-yellow-100 text-yellow-800'
                      when 'confirmed' then 'bg-blue-100 text-blue-800'
                      when 'preparing' then 'bg-purple-100 text-purple-800'
                      when 'ready' then 'bg-green-100 text-green-800'
                      when 'delivered' then 'bg-gray-100 text-gray-800'
                      when 'cancelled' then 'bg-red-100 text-red-800'
                      end %>">
                  <%= order.status.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                <%= order.delivery_date.strftime('%d/%m/%Y %H:%M') %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                <%= link_to "Ver", admin_order_path(order), class: "text-purple-600 hover:text-purple-900" %>
                <a href="https://wa.me/<%= order.phone.gsub(/\D/, '') %>?text=<%= ERB::Util.url_encode(order.whatsapp_message) %>" 
                   target="_blank" 
                   class="text-green-600 hover:text-green-900">
                  WhatsApp
                </a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white rounded-xl shadow-lg p-12 text-center">
      <span class="text-6xl mb-4 block">üì¶</span>
      <h3 class="text-2xl font-bold text-gray-700 mb-2">No hay pedidos</h3>
      <p class="text-gray-500">Los pedidos aparecer√°n aqu√≠</p>
    </div>
  <% end %>
</div>
