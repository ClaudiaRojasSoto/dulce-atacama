<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-8">
    <%= link_to "‚Üê Volver a pedidos", admin_orders_path, class: "text-purple-600 hover:text-purple-700 font-medium" %>
  </div>

  <div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="bg-gradient-to-r from-purple-600 to-pink-600 text-white px-8 py-6">
      <h1 class="text-3xl font-bold">Pedido #<%= @order.id %></h1>
      <p class="text-purple-100 mt-2">Creado el <%= @order.created_at.strftime('%d/%m/%Y %H:%M') %></p>
    </div>

    <div class="p-8">
      <div class="mb-8">
        <h2 class="text-xl font-bold text-gray-800 mb-4">Cambiar Estado</h2>
        <%= form_with(model: [:admin, @order], method: :patch, class: "flex gap-4 items-end") do |form| %>
          <div class="flex-1">
            <%= form.select :status, 
                Order.statuses.keys.map { |s| [s.titleize, s] }, 
                {}, 
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
          </div>
          <%= form.submit "Actualizar Estado", class: "px-6 py-2 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-lg hover:from-purple-700 hover:to-pink-700 transition font-semibold" %>
        <% end %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
        <div>
          <h2 class="text-xl font-bold text-gray-800 mb-4">Informaci√≥n del Cliente</h2>
          <div class="space-y-3">
            <div>
              <span class="text-sm text-gray-600 block">Email:</span>
              <span class="text-gray-900 font-medium"><%= @order.user.email %></span>
            </div>
            <div>
              <span class="text-sm text-gray-600 block">Tel√©fono:</span>
              <span class="text-gray-900 font-medium"><%= @order.phone %></span>
            </div>
            <div>
              <span class="text-sm text-gray-600 block">Direcci√≥n:</span>
              <span class="text-gray-900 font-medium"><%= @order.delivery_address %></span>
            </div>
            <div>
              <span class="text-sm text-gray-600 block">Fecha de Entrega:</span>
              <span class="text-gray-900 font-medium"><%= @order.delivery_date.strftime('%d/%m/%Y %H:%M') %></span>
            </div>
          </div>
        </div>

        <div>
          <h2 class="text-xl font-bold text-gray-800 mb-4">Resumen</h2>
          <div class="bg-gradient-to-r from-purple-50 to-pink-50 rounded-lg p-4">
            <div class="text-sm text-gray-600 mb-1">Total:</div>
            <div class="text-4xl font-bold text-purple-600">$<%= number_with_delimiter(@order.total) %></div>
          </div>
          
          <a href="https://wa.me/<%= @order.phone.gsub(/\D/, '') %>?text=<%= ERB::Util.url_encode(@order.whatsapp_message) %>" 
             target="_blank" 
             class="mt-4 block text-center bg-green-500 text-white px-6 py-3 rounded-lg hover:bg-green-600 transition font-semibold">
            üí¨ Contactar por WhatsApp
          </a>
        </div>
      </div>

      <div class="mb-8">
        <h2 class="text-xl font-bold text-gray-800 mb-4">Productos</h2>
        <div class="space-y-4">
          <% @order.order_items.each do |item| %>
            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
              <div class="flex items-center space-x-4">
                <% if item.product.images.attached? %>
                  <%= image_tag item.product.images.first, class: "h-16 w-16 rounded-lg object-cover" %>
                <% else %>
                  <div class="h-16 w-16 bg-gradient-to-br from-pink-200 to-purple-200 rounded-lg flex items-center justify-center text-2xl">üç∞</div>
                <% end %>
                
                <div>
                  <h3 class="font-bold text-gray-800"><%= item.product.name %></h3>
                  <p class="text-sm text-gray-600">Cantidad: <%= item.quantity %> √ó $<%= number_with_delimiter(item.price) %></p>
                </div>
              </div>
              
              <div class="text-right">
                <span class="text-lg font-bold text-gray-800">$<%= number_with_delimiter(item.subtotal) %></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <% if @order.notes.present? %>
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-r-lg">
          <h3 class="font-semibold text-gray-800 mb-2">Notas adicionales:</h3>
          <p class="text-gray-700"><%= @order.notes %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
